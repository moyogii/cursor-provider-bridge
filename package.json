{
  "name": "cursor-provider-bridge",
  "displayName": "Cursor Provider Bridge",
  "description": "Connect Cursor IDE to local AI providers via ngrok tunneling",
  "version": "0.1.0",
  "icon": "icon.png",
  "publisher": "moyogi",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "keywords": [
    "cursor",
    "ai",
    "ngrok",
    "tunnel",
    "local models",
    "local llms",
    "llm",
    "proxy",
    "lm studio",
    "ollama"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursor-provider-bridge.start",
        "title": "Start Bridge",
        "category": "Cursor Provider Bridge"
      },
      {
        "command": "cursor-provider-bridge.stop",
        "title": "Stop Bridge",
        "category": "Cursor Provider Bridge"
      },
      {
        "command": "cursor-provider-bridge.restart",
        "title": "Restart Bridge",
        "category": "Cursor Provider Bridge"
      },
      {
        "command": "cursor-provider-bridge.configure",
        "title": "Configure Connection",
        "category": "Cursor Provider Bridge"
      },
      {
        "command": "cursor-provider-bridge.showStatus",
        "title": "Show Status",
        "category": "Cursor Provider Bridge"
      },
      {
        "command": "cursor-provider-bridge.showQuickMenu",
        "title": "Show Quick Menu",
        "category": "Cursor Provider Bridge"
      },
      {
        "command": "cursor-provider-bridge.runSetup",
        "title": "Run Setup",
        "category": "Cursor Provider Bridge"
      },
      {
        "command": "cursor-provider-bridge.resetSetup",
        "title": "Reset Setup State",
        "category": "Cursor Provider Bridge"
      }
    ],
    "configuration": {
      "title": "Cursor Provider Bridge",
      "properties": {
        "cursor-provider-bridge.providerUrl": {
          "type": "string",
          "default": "http://localhost:1234",
          "description": "AI provider server URL (LM Studio, Ollama, etc.)"
        },
        "cursor-provider-bridge.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start the bridge when VSCode opens"
        },
        "cursor-provider-bridge.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show status in the status bar"
        },
        "cursor-provider-bridge.ngrokAuthToken": {
          "type": "string",
          "default": "",
          "description": "Authentication token for ngrok for domain features"
        },
        "cursor-provider-bridge.ngrokDomain": {
          "type": "string",
          "default": "",
          "description": "Custom ngrok domain"
        },
        "cursor-provider-bridge.ngrokRegion": {
          "type": "string",
          "default": "us",
          "enum": [
            "us",
            "eu",
            "au",
            "ap",
            "sa",
            "jp",
            "in"
          ],
          "description": "Ngrok region for tunnel endpoint"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "cursor-provider-bridge.start"
        },
        {
          "command": "cursor-provider-bridge.stop"
        },
        {
          "command": "cursor-provider-bridge.restart"
        },
        {
          "command": "cursor-provider-bridge.configure"
        },
        {
          "command": "cursor-provider-bridge.showStatus"
        },
        {
          "command": "cursor-provider-bridge.showQuickMenu"
        },
        {
          "command": "cursor-provider-bridge.runSetup"
        },
        {
          "command": "cursor-provider-bridge.resetSetup"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "compile:tsc": "tsc -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:coverage": "c8 --reporter=lcov --reporter=html npm test",
    "package": "vsce package",
    "sonar": "sonar-scanner",
    "install:cross-platform": "npm install --os=linux --cpu=x64 @ngrok/ngrok-linux-x64-gnu@1.5.2 && npm install --os=darwin --cpu=x64 @ngrok/ngrok-darwin-x64@1.5.2 && npm install --os=darwin --cpu=arm64 @ngrok/ngrok-darwin-arm64@1.5.2",
    "build": "npm run install:cross-platform && npm run compile && npm run lint",
    "package:cross-platform": "npm run build && npm run package"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^8.28.0",
    "node-loader": "^2.1.0",
    "ts-loader": "^9.5.2",
    "typescript": "^4.9.4",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@ngrok/ngrok": "^1.5.1",
    "node-fetch": "^2.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moyogii/cursor-provider-bridge"
  },
  "bugs": {
    "url": "https://github.com/moyogii/cursor-provider-bridge/issues"
  },
  "homepage": "https://github.com/moyogii/cursor-provider-bridge#readme",
  "license": "GNU-3.0",
  "optionalDependencies": {
    "@ngrok/ngrok-darwin-arm64": "^1.5.2",
    "@ngrok/ngrok-darwin-x64": "^1.5.2",
    "@ngrok/ngrok-linux-x64-gnu": "^1.5.2"
  }
}
